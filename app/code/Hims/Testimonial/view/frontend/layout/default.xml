<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<body>
    <referenceBlock name="footer_links">
         <block class="Magento\Framework\View\Element\Html\Link\Current" ifconfig="testimonial/general/enable" name="testimonial-footer-link">
             <arguments>
                 <argument name="label" xsi:type="string">Testimonials</argument>
                 <argument name="path" xsi:type="string">testimonial/</argument>
             </arguments>
         </block>
     </referenceBlock>

</body>
</page>