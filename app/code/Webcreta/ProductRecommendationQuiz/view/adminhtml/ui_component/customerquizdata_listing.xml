        <column name="customer_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="label" xsi:type="string" translate="true">Customer</item>
                </item>
            </argument>
        </column>
        <column name="question_set" class="Webcreta\ProductRecommendationQuiz\Ui\Component\Column\QuestionName">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>

                    <item name="filter" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="label" xsi:type="string" translate="true">question set</item>
                </item>
            </argument>
        </column>
        <column name="product">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="label" xsi:type="string" translate="true">product</item>
                </item>
            </argument>
        </column>
        <column name="category" class="Webcreta\ProductRecommendationQuiz\Ui\Component\Column\AttributesetName">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="label" xsi:type="string" translate="true">category</item>
                </item>
            </argument>
        </column>
        <!-- <actionsColumn name="actions" class="Webcreta\ProductRecommendationQuiz\Ui\Component\Column\ActionsCategory">
