<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Webcreta\ProductRecommendationQuiz\Block\GetCurrentCategory" name="custom.block" template="Webcreta_ProductRecommendationQuiz::currentCategory.phtml" />
            <block class="Magento\Cms\Block\Widget\Block" name="customer_benefits_block_widget" template="widget/static_block/default.phtml">
                <arguments>
                    <argument name="block_id" xsi:type="string">customer_benefits_block</argument>
                </arguments>
            </block>
            <referenceBlock name="sidebar.main" remove="true"/>
            <referenceBlock name="sidebar.additional" remove="true"/>
        </referenceContainer>
    </body>
</layout>
